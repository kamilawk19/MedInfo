{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../css/home.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="../css/pharmacy_supply.css" />
{% endblock %}

{% block title %}{{page_name}}{% endblock %}

{% block body %}

{{ include('sidebar.html.twig') }}

<div class="flex-shrink-0 p-9 h-100 col-10 custom-div overflow-auto">

    <h1>{{page_name}}</h1>
  
    <a href="{{ path('app_pharmacy_supply_new') }}">
    <button type="button" class="btn btn-link px-4 me-md-2">Dodaj nowy</button>
    </a>

    <br><br>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="bg-th">
                <th>Nazwa</th>
                <th>INN</th>
                <th>Opis</th>
                <th>Ilość</th>
                <th>Data ważności</th>
                <th>Lista N</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacy_supply in pharmacy_supplies %}
            <tr>
                <td>{{ pharmacy_supply.Name }}</td>
                <td>{{ pharmacy_supply.InternationalName }}</td>
                <td>{{ pharmacy_supply.Description }}</td>
                <td>{{ pharmacy_supply.Quantity }}</td>
                <td>{{ pharmacy_supply.ExpDate ? pharmacy_supply.ExpDate|date('Y-m-d') : '' }}</td>
                <td>{{ pharmacy_supply.DrugListN ? 'Tak' : 'Nie' }}</td>
                <td>
                    <a href="{{ path('app_pharmacy_supply_show', {'id': pharmacy_supply.id}) }}"><i class="bi bi-info-square"></i></a>
                    <a href="{{ path('app_pharmacy_supply_edit', {'id': pharmacy_supply.id}) }}"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>

</div>
{% endblock %}
