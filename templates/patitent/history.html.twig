{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../../css/home.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="../../css/pharmacy_supply.css" />
    <link rel="stylesheet" type="text/css" href="../../css/pharmacy_show.css" />
{% endblock %}

{% block title %}{{page_name}}{% endblock %}

{% block body %}

    {{ include('sidebar.html.twig') }}

<div class="flex-shrink-0 p-9 h-100 custom-div overflow-auto col-6 col-sm-8 col-md-9 col-lg-10">

    <h1>{{page_name}}</h1>

    <a href="{{ path('app_patitent_show', {'id': patitent.id}) }}">
    <h6><i class="bi bi-arrow-left"></i> Powrót do danych pacjenta</h6>
    </a>
<br>

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="text-center" >Zabieg</th>
                <th class="text-center" >Początek</th>
                <th class="text-center" >Koniec</th>
                <th class="text-center" >Wykonano</th>
                <th class="text-center" ></th>
            </tr>
        </thead>
        <tbody>
            {% for ap in patitent.appointments %}
            <tr>
                <td class="text-center" >Hemodializa</td>
                <td class="text-center" >{{ap.Start|date('d-m-Y H:i')}}</td>
                <td class="text-center" >{{ap.End|date('d-m-Y H:i')}}</td>
                <td class="text-center" >{{ap.HasHappened ? 'Tak' : 'Nie'}}</td>
                <td class="text-center" >
                    <a href="/medical-procedure/{{ap.id}}">Więcej</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">Brak wpisów</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
