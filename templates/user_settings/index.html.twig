{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../css/home.css" />
    <link rel="stylesheet" type="text/css" href="../css/user_settings.css" />
{% endblock %}

{% block title %}{{page_name}}{% endblock %}

{% block body %}

{{ include('sidebar.html.twig') }}

<div class="flex-shrink-0 p-9 h-100 custom-div overflow-auto col-6 col-sm-8 col-md-9 col-lg-10">
    <h1>{{page_name}}</h1>

    <div class="container space-100">
        <div class="row row-cols-5">
            <h5 class="col margin-bot-20">Dane osobowe</h5>
        </div>
        <div class="row row-cols-5">
            <div class="col">Imię:</div>
            <div class="col">{{ app.user.getFirstName() }}</div>
        </div>
        <div class="row row-cols-5">
            <div class="col">Drugie imię:</div>
            <div class="col">{{ app.user.getSecondName() }}</div>
        </div>
        <div class="row row-cols-5">
            <div class="col">Nazwisko:</div>
            <div class="col">{{ app.user.getLastName() }}</div>
        </div>
        <div class="row row-cols-5">
            <div class="col">Nr wykonywania zawodu:</div>
            <div class="col">{{app.user.getLicensureNumber() }}</div>
        </div>
        <div class="row row-cols-5">
            <h5 class="col margin-20">Adres</h5>
        </div>
        <div class="row row-cols-5 d-flex flex-wrap">
            <div class="col" style="min-width: 185px;">Kraj:</div>
            <div class="col" style="min-width: 185px;">{{country}}</div>
            <div class="col" style="min-width: 185px;">Województwo:</div>
            <div class="col" style="min-width: 185px;">{{voivodeship}}</div>
        </div>
        <div class="row row-cols-5 d-flex flex-wrap">
            <div class="col" style="min-width: 185px;">Miasto:</div>
            <div class="col" style="min-width: 185px;">{{city}}</div>
            <div class="col" style="min-width: 185px;">Kod pocztowy:</div>
            <div class="col" style="min-width: 185px;">{{zipcode}}</div>
        </div>
        <div class="row row-cols-5 d-flex flex-wrap">
            <div class="col" style="min-width: 185px;">Ulica:</div>
            <div class="col" style="min-width: 185px;">{{street}}</div>
            <div class="col" style="min-width: 185px;">Nr mieszkania i budynku:</div>
            <div class="col" style="min-width: 185px;">{{buildingNumber}}/{{apartmentNumber}}</div>
        </div>
        <div class="row row-cols-5">
            <h5 class="col margin-20">Konto</h5>
        </div>
        <div class="row row-cols-5">
            <div class="col">Login:</div>
            <div class="col">{{ app.user.getUsername() }}</div>
        </div>
        <div class="row row-cols-5">
            <div class="col">Data ostatniej zmiany hasła:</div>
            <div class="col">{{ userDate }}</div>
        </div>
        <br>
        <div class="row justify-content-center justify-content-md-center">
            <div class="col-2">
                <a href="#"><button type="button" class="btn btn-link px-4 me-md-2">Zmień hasło</button></a>
            </div>
            <div class="col-2">
                <a href="#"><button type="button" class="btn btn-link px-4 me-md-2" style="background-color: #6082B6 !important;">Zmień dane</button></a>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>

{% endblock %}
