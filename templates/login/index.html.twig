{% extends 'base.html.twig' %}

{% block title %}MedInfo - Logowanie{% endblock %}

{% block body %}
    {# Menu #}
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <!--<svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>-->
                <img class="bi me-2" src="{{ asset('images/logo_vol2.png')}}" alt="Logo" width="45" height="45">
                <span class="fs-4">MedInfo</span>
            </a>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 link-dark">Strona główna</a></li>
                <li><a href="#Funkcje" class="nav-link px-2 link-dark">Funkcje</a></li>
                <li><a href="#Cennik" class="nav-link px-2 link-dark">Cennik</a></li>
                <li><a href="#Kontakt" class="nav-link px-2 link-dark">Kontakt</a></li>
            </ul>

            <div class="col-md-3 text-end">
                <a href="/login"><button type="button" class="btn btn-outline-secondary me-2">Logowanie</button></a>
                <a href="/register"><button type="button" class="btn btn-link">Rejestracja</button></a>
            </div>
        </header>
    </div>
    {# End-Menu #}

    {# Login #}
    <div class="container col-xxl-8 px-4 py-3">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-12 col-md-12 col-lg-6 text-center justify-content-center">
                <img src="{{ asset('images/Hero.png')}}" class="d-block mx-auto img-fluid col-8 col-sm-5 col-md-4 col-lg-10 col-xl-10" alt="Hero" loading="lazy">
            </div>
            <div class="col-lg-6">
                <h2 class="text-center mb-4 text-primary primary-text-color">Logowanie</h2>

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Login</label>
                        <input type="text" class="form-control border border-primary" id="username" aria-describedby="usernameHelp" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Hasło</label>
                        <input type="password" class="form-control border border-primary" id="password" name="_password">
                    </div>
                    <p class="small"><a class="text-primary" href="forget-password.html">Zapomniałeś/aś hasła?</a></p>

                    <input type="hidden" name="_target_path" value="/home"/>

                    <div class="d-grid">
                        <button class="btn btn-primary btn-link" type="submit">Zaloguj</button>
                    </div>
                </form>
                <div class="mt-3">
                    <p class="mb-0  text-center">Nie masz konta?
                        <a href="/register" class="text-primary fw-bold">Zarejestruj się</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    {# End-Login #}

    {# Footer #}
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                    <img class="bi" src="{{ asset('images/logo_vol2.png')}}" alt="Logo" width="30" height="30">
                </a>
                <span class="mb-3 mb-md-0 text-muted">© 2022 MedInfo. All rights reserved</span>
            </div>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3"><a class="text-muted" href="#"><img class="bi" src="{{ asset('images/Twitter.png')}}" alt="Logo" width="24" height="24"></a></li>
                <li class="ms-3"><a class="text-muted" href="#"><img class="bi" src="{{ asset('images/Facebook.png')}}" alt="Logo" width="24" height="24"></a></li>
                <li class="ms-3"><a class="text-muted" href="#"><img class="bi" src="{{ asset('images/Instagram.png')}}" alt="Logo" width="24" height="24"></a></li>
            </ul>
        </footer>
    </div>
    {# End-Footer #}
{% endblock %}
